<% @bands = Band.all %>

<form action="<%= action_url %>" method="post">
  <input type="hidden" name="_method" value="<%= method_verb %>">
  <%= auth_token %>

  <label for="name"></label>Name
  <input type="text" name="album[title]" value="<%= @album.title %>" id="name">

  <br>

  <label for="band"></label>Band
  <select name="album[band]">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>" <%= 'selected' if band.name == @band.name %> ><%= band.name %></option>
    <% end %>
  </select>

  <br>

  <label for="album_type"></label>Type
  <input type="radio" name="album[album_type]" value="Studio" id="album_type" <%= 'checked'.html_safe if @album.album_type == 'Studio' %>>Studio
  <input type="radio" name="album[album_type]" value="Live" id="album_type" <%= 'checked'.html_safe if @album.album_type == 'Live' %>>Live

  <br>

  <label for="year"></label>Year
  <input type="text" name="album[year]" value="<%= @album.year %>" id="year">

  <br><br>

  <input type="submit" value="<%= button_txt %>">
</form>
